<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Rise Gym Access Theme -->
    <style name="Theme.RiseGymAccess" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/rise_black</item>
        <item name="colorOnPrimary">@color/rise_white</item>
        <item name="colorPrimaryContainer">@color/rise_dark_gray</item>
        <item name="colorOnPrimaryContainer">@color/rise_white</item>
        
        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/rise_dark_gray</item>
        <item name="colorOnSecondary">@color/rise_white</item>
        <item name="colorSecondaryContainer">@color/rise_light_gray</item>
        <item name="colorOnSecondaryContainer">@color/rise_black</item>
        
        <!-- Surface Colors -->
        <item name="colorSurface">@color/rise_white</item>
        <item name="colorOnSurface">@color/rise_black</item>
        <item name="colorSurfaceVariant">@color/rise_light_gray</item>
        <item name="colorOnSurfaceVariant">@color/rise_dark_gray</item>
        
        <!-- Background -->
        <item name="android:colorBackground">@color/rise_white</item>
        <item name="colorOnBackground">@color/rise_black</item>
        
        <!-- System UI -->
        <item name="android:statusBarColor">@color/rise_black</item>
        <item name="android:navigationBarColor">@color/rise_white</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>
    
    <!-- Legacy theme name for backwards compatibility -->
    <style name="Theme.RiseGymQRPredictor" parent="Theme.RiseGymAccess" />
</resources>